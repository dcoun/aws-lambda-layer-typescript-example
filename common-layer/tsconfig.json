{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "target": "es6",
    "outDir": ".build",
    "strictNullChecks": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitThis": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "common-layer/*": [
        "src/*"
      ],
      "test/*": [
        "test/*",
        "./test/*"
      ]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
